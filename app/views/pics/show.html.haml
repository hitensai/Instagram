.col-md-8.col-md-offset-2
  .row
    .panel.panel-defsault
      .panel-heading
        %h1= @pic.title
      .panel-body
        = image_tag @pic.image.url, :size => "1200x800"
     
        %p= @pic.description
        %p
        Pic by
        = @pic.user.email

        %br
        %hr

        = link_to "Back", root_path
        = link_to "Edit", edit_pic_path
        = link_to "delete", pic_path(@pic), method: :delete, data: { confirm: "Are you sure?"},class: "delete" 
